doctype html
html
    head
        title="Billy's Control Room"
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
        link(href='/stylesheets/style.css', rel='stylesheet')
        link(href='/stylesheets/bootstrap-switch.min.css', rel='stylesheet')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
        script(src='/javascripts/bootstrap-switch.min.js')
        script(src='/javascripts/controls.js')
    body
        nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    a.navbar-brand(href='/') Billy's Control Room
        .container
            p.text-right
            .row
                .panel.panel-default
                    .panel-heading Technical Stack
                    .panel-body
                        ul
                            li Raspberry Pi
                            li Node.js
                            li Express.js
                            li jQuery
                            li
                                a(href='http://www.bootstrap-switch.org') BootStrap-Switch
            .row
                table.table.table-bordered
                    thead
                        tr
                            th
                                p 종류
                            th
                                p Action
                    tbody
                        tr
                            td
                                p Pin 7
                            td
                                input(type='checkbox', class="switch", name='7', checked='')
                        tr
                            td
                                p Pin 13
                            td
                                input(type='checkbox', class="switch", name='13', checked='')
